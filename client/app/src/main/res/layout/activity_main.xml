<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/loadCourseButton"
            android:text="@string/load_course_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

    <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loadCourseButton"/>

    <Button
            android:text="LOAD PERSONS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/loadPersonsbutton"
            android:layout_marginEnd="3dp" android:layout_alignEnd="@+id/listView"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/addPersonFloatingActionButton"
            android:layout_alignTop="@+id/listView"
            android:layout_marginTop="475dp"
            android:layout_marginEnd="20dp"
            android:layout_alignEnd="@+id/loadPersonsbutton"
            android:focusable="true"/>

</RelativeLayout>